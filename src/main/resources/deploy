apiVersion: apps/v1
kind: Deployment
metadata:
  name: ta-clients
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ta-clients
  template:
    metadata:
      labels:
        app: ta-clients
    spec:
      containers:
        - image: vicuolia/clientservice
          name: ta-clients
          ports:
            - containerPort: 8090
              name: ta-clients
          env:
            - name: POSTGRES_ENDPOINT
              value: "jdbc:postgresql://localhost:5432/"
            - name: POSTGRES_PASSWORD
              value: "1qwerty2asdfg"
            - name: POSTGRES_USERNAME
              value: "travel_agency"